alias vi='vim'
alias cheat='cht.sh'

alias s='echo -n "Press enter to run as sudo or Crtl-C to cancel ..."; read; sudo'
alias !='s'
alias suo='sudo'

alias ls='lsd'
alias lsl='ls -l --group-dirs first'
